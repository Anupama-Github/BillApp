<%= form_for @item, :html => { :class => ' well form-inline' } do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= f.label "Name" %>
   <%= f.collection_select :product_id, Product.all, :id, :name %> 
</div>

<div class="field">
    <%= f.label :product_id %>
   <%= f.collection_select :product_id, Product.all, :id, :size %> 
</div>

<div class="field">
    <%= f.label :sold_qty %>
   <%= f.text_field :sold_qty, :placeholder => "Sold Quantity" %> 
</div>

<div class="field">
    <%= f.label :rate %>
   <%= f.text_field :rate %> 
</div>
<div class="field">
    <%= f.label :mm %>
   <%= f.text_field :mm %> 
</div>
<div class="field">
    <%= f.label :size %>
   <%= f.text_field :size %> 
</div>
<div class="field">
    <%= f.label :length %>
   <%= f.text_field :length %> 
</div>
<div class="field">
    <%= f.label :no %>
   <%= f.text_field :no %> 
</div>
<div class="field">
    <%= f.label :feet %>
   <%= f.text_field :feet %> 
</div>
<div class="field">
    <%= f.label :cft %>
   <%= f.text_field :cft %> 
</div>
<div class="field">
    <%= f.label :sqft %>
   <%= f.text_field :sqft %> 
</div>


</br>
<div class="actions">
    <%= f.submit %>
</div>

<% end %>

